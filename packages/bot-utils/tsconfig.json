{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "strict": true,
    "noImplicitAny": true,
    "noErrorTruncation": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "composite": true,
    "rootDir": "src/"
  },
  "include": ["src/**/*.ts"],
  "references": [
    {
      "path": "../../node_modules/@mangrovedao/mangrove.js"
    }
  ]
}
