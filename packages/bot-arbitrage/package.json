{
  "name": "@mangrovedao/bot-arbitrage",
  "version": "0.0.1",
  "author": "Mangrove DAO",
  "description": "A simple Mangrove arbitrage bot that buys & sells on one orderbook when best bid > best ask",
  "license": "BSD-2-Clause",
  "main": "build/index.js",
  "keywords": [
    "Mangrove",
    "arbitrage",
    "bot"
  ],
  "scripts": {
    "precommit": "lint-staged",
    "prepack": "yarn build",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "build-solidity": "cd mangrove-arbitrage && forge build && cd ..",
    "build-this-package": "yarn typechain && tsc && yarn run write-env-info-file",
    "heroku-build-this-package": "yarn run build-this-package",
    "build": "yarn install && yarn workspaces foreach -vpiR --topological-dev --from $npm_package_name run build-this-package",
    "clean-this-package": "rimraf build tsconfig.tsbuildinfo",
    "clean": "yarn workspaces foreach -vpiR --topological-dev --from $npm_package_name run clean-this-package",
    "test-with-dependencies": "yarn workspaces foreach -vpiR --topological-dev --from $npm_package_name run test",
    "test": "yarn run test:integration",
    "test:integration": "cross-env NODE_ENV=test nyc --reporter=lcov mocha --max-old-space-size=8192 --config test/mocha/config/integration-tests.json --exit ",
    "test:coverage": "cross-env NODE_ENV=test nyc --reporter=lcov mocha --max-old-space-size=8192 --config test/mocha/config/coverage-tests.json --exit ",
    "typechain": "ts-node --transpileOnly src/util/runTypechain.ts",
    "demo": "ts-node --transpileOnly scripts/demoScript.ts",
    "start": "node build/index.js",
    "startLocal": "node build/local.js",
    "write-env-info-file": "node ./scripts/writeEnvInfoFile.js"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "@ethersproject/experimental": "^5.7.0",
    "@mangrovedao/bot-utils": "workspace:*",
    "@mangrovedao/mangrove-arbitrage": "workspace:*",
    "@types/big.js": "^6.1.6",
    "@types/finalhandler": "^1.2.0",
    "@types/serve-static": "^1.15.0",
    "@uniswap/v3-core": "^1.0.1",
    "@uniswap/v3-periphery": "^1.4.3",
    "big.js": "^6.2.1",
    "config": "^3.3.8",
    "dotenv-flow": "^3.2.0",
    "ethers": "^5.7.2",
    "fast-safe-stringify": "^2.1.1",
    "finalhandler": "^1.2.0",
    "nyc": "^15.1.0",
    "serve-static": "^1.15.0",
    "toad-scheduler": "^2.2.0"
  },
  "devDependencies": {
    "@espendk/json-file-reporter": "^1.4.2",
    "@ethersproject/hardware-wallets": "^5.7.0",
    "@types/chai": "^4.3.4",
    "@types/chai-as-promised": "^7.1.5",
    "@types/config": "^3.3.0",
    "@types/dotenv-flow": "^3.2.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^20.2.1",
    "@types/shelljs": "^0.8.11",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.48.1",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.5.0",
    "lint-staged": "^13.0.3",
    "mocha": "^10.0.0",
    "mocha-multi-reporters": "^1.5.1",
    "npm-run-all": "^4.1.5",
    "prettier": "2.7.1",
    "prettier-eslint": "^15.0.1",
    "rimraf": "^5.0.1",
    "shelljs": "^0.8.5",
    "transparent-proxy": "^1.12.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.0"
  }
}
