{
  "name": "@mangrovedao/bot-updategas",
  "version": "0.0.1",
  "author": "Mangrove DAO",
  "description": "A simple gas-update bot for Mangrove",
  "license": "BSD-2-Clause",
  "main": "build/index.js",
  "keywords": [
    "Mangrove",
    "keeper",
    "bot"
  ],
  "scripts": {
    "precommit": "lint-staged",
    "prepack": "yarn build",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "build-this-package": "tsc",
    "heroku-build-this-package": "yarn run build-this-package",
    "build": "yarn install && yarn workspaces foreach -vpiR --topological-dev --from $npm_package_name run build-this-package",
    "clean-this-package": "rimraf build tsconfig.tsbuildinfo",
    "clean": "yarn workspaces foreach -vpiR --topological-dev --from $npm_package_name run clean-this-package",
    "test-with-dependencies": "yarn workspaces foreach -vpiR --topological-dev --from $npm_package_name run test",
    "test": "yarn run test:unit && yarn run test:integration",
    "test:unit": "cross-env NODE_ENV=test nyc --reporter=lcov mocha --config test/mocha/config/unit-tests.json --exit",
    "test:integration": "cross-env NODE_ENV=test nyc --reporter=lcov mocha --max-old-space-size=8192 --config test/mocha/config/integration-tests.json --exit ",
    "test:coverage": "cross-env NODE_ENV=test nyc --reporter=lcov mocha --max-old-space-size=8192 --config test/mocha/config/coverage-tests.json --exit ",
    "start": "node build/index.js"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "@ethersproject/experimental": "^5.7.0",
    "@mangrovedao/bot-utils": "workspace:*",
    "@types/big.js": "^6.1.6",
    "@types/finalhandler": "^1.2.0",
    "@types/serve-static": "^1.15.0",
    "alchemy-sdk": "^2.8.0",
    "big.js": "^6.2.1",
    "config": "^3.3.9",
    "dotenv-flow": "^3.2.0",
    "ethers": "^5.7.2",
    "fast-safe-stringify": "^2.1.1",
    "finalhandler": "^1.2.0",
    "nyc": "^15.1.0",
    "serve-static": "^1.15.0",
    "toad-scheduler": "^2.2.0"
  },
  "devDependencies": {
    "@espendk/json-file-reporter": "^1.4.2",
    "@ethersproject/hardware-wallets": "^5.7.0",
    "@typechain/ethers-v5": "^10.2.0",
    "@types/chai": "^4.3.4",
    "@types/chai-as-promised": "^7.1.5",
    "@types/config": "^3.3.0",
    "@types/dotenv-flow": "^3.2.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.3.0",
    "@types/shelljs": "^0.8.11",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.48.1",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^8.8.0",
    "lint-staged": "^13.2.0",
    "mocha": "^10.2.0",
    "mocha-multi-reporters": "^1.5.1",
    "npm-run-all": "^4.1.5",
    "prettier": "2.7.1",
    "prettier-eslint": "^15.0.1",
    "rimraf": "^5.0.1",
    "shelljs": "^0.8.5",
    "ts-mockito": "^2.0.0",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.0",
    "typescript": "^4.7.0"
  }
}
