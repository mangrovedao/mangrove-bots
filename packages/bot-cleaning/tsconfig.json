{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "strict": true,
    "noErrorTruncation": true,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "composite": true,
    "rootDir": "src/"
  },
  "include": ["src/**/*.ts"],
  "references": [
    {
      "path": "../../node_modules/@mangrovedao/mangrove.js"
    },
    {
      "path": "../bot-utils"
    }
  ]
}
