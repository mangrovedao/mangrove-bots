{
  "name": "@mangrovedao/bot-arbitrage",
  "version": "0.0.1",
  "author": "Mangrove DAO",
  "description": "A simple Mangrove arbitrage bot that buys & sells on one orderbook when best bid > best ask",
  "license": "BSD-2-Clause",
  "main": "build/index.js",
  "keywords": [
    "Mangrove",
    "keeper",
    "bot"
  ],
  "scripts": {
    "precommit": "lint-staged",
    "prepack": "yarn build",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "build-this-package": "tsc && yarn run write-env-info-file",
    "heroku-build-this-package": "yarn run build-this-package",
    "build": "yarn install && yarn workspaces foreach -vpiR --topological-dev --from $npm_package_name run build-this-package",
    "clean-this-package": "rimraf build tsconfig.tsbuildinfo",
    "clean": "yarn workspaces foreach -vpiR --topological-dev --from $npm_package_name run clean-this-package",
    "test-with-dependencies": "yarn workspaces foreach -vpiR --topological-dev --from $npm_package_name run test",
    "test": "yarn run test:unit && yarn run test:integration",
    "test:unit": "cross-env NODE_ENV=test nyc --reporter=lcov mocha --config test/mocha/config/unit-tests.json --exit",
    "test:integration": "cross-env NODE_ENV=test nyc --reporter=lcov mocha --max-old-space-size=8192 --config test/mocha/config/integration-tests.json --exit ",
    "test:coverage": "cross-env NODE_ENV=test nyc --reporter=lcov mocha --max-old-space-size=8192 --config test/mocha/config/coverage-tests.json --exit ",
    "start": "node build/index.js",
    "write-env-info-file": "node ./scripts/writeEnvInfoFile.js"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "@ethersproject/experimental": "^5.6.1",
    "@mangrovedao/commonlib.js": "workspace:*",
    "@mangrovedao/mangrove.js": "workspace:*",
    "@types/big.js": "^6.1.3",
    "@types/coingecko-api": "^1.0.10",
    "@types/finalhandler": "^1.1.1",
    "@types/serve-static": "^1.13.10",
    "axios": "^0.26.1",
    "big.js": "^6.1.1",
    "coingecko-api": "^1.0.10",
    "config": "^3.3.6",
    "dotenv-flow": "^3.2.0",
    "ethers": "^5.4.7",
    "fast-safe-stringify": "^2.1.1",
    "finalhandler": "^1.1.2",
    "serve-static": "^1.14.2"
  },
  "devDependencies": {
    "@espendk/json-file-reporter": "^1.4.2",
    "@ethersproject/hardware-wallets": "^5.4.0",
    "@types/chai": "^4.2.21",
    "@types/chai-as-promised": "^7.1.4",
    "@types/config": "^0.0.39",
    "@types/dotenv-flow": "^3.2.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.9.4",
    "@types/shelljs": "^0.8.9",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "lint-staged": "^11.1.2",
    "mocha": "^9.1.1",
    "mocha-multi-reporters": "^1.5.1",
    "npm-run-all": "^4.1.5",
    "prettier": "2.3.2",
    "prettier-eslint": "^13.0.0",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2"
  }
}
